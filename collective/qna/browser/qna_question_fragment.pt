<div xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="collective.qna"
     tal:define="question options/question;
                 url_quote nocall:modules/Products.PythonScripts.standard/url_quote;"
     class="qna_question_listing"
     >

  <a href="#" class="total-answers"
     tal:attributes="href question/getURL">
     <span tal:content="question/qna_total_answers">5</span>
     <span>Answers</span>
  </a>

  <a href="#" class="user"
     tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/author/${question/Creator};"
     >
    <span tal:content="question/Creator">
      Anthony User
    </span>
  </a>

  <a href="#" class="details"
     tal:attributes="href question/getURL">
    <h3 tal:content="question/Title">My question is this</h3>
    <div class="details"
         tal:content="question/details">
      I don't know how to do this
    </div>
  </a>
  <ul class="categories">
    <li tal:repeat="category question/Subject">
      <a href="#"
         tal:attributes="href python:context.absolute_url() + '/by-category?category=' + url_quote(category,'');"
         tal:content="category">
         Tag
      </a>
    </li>
  </ul>

</div>
